Include "inc.engine.bmx"
Include "inc.media.bmx"

Graphics 1024, 768
SetBlend ALPHABLEND



While Not KeyHit(KEY_ESCAPE)
	Cls
	
	DrawImage bg, 0, 0
	terrainshape.Draw()
	DrawImage player, MouseX(), MouseY()
	TExplosion.UpdateAll()
	If KeyHit(KEY_SPACE) New TExplosion.Create(MouseX(), MouseY())
	
	
	Flip
Wend
End