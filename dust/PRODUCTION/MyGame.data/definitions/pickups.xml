<?xml version="1.0" encoding="UTF-8" ?>
<!--
DOCUMENTATION
	<image></image>
		the name of the image file from the folder /graphics for example if it is /graphics/monsters/ant.png
		you would put /monsters/ant.png		
	<playerHealth></playerHealth>
		the amount of health given to the player upon picking up
	<weapon></weapon>
		the type of weapon to give to the player if picked up
	<ammo></ammo>
		if the player already has the above type of weapon, how much ammo to give him
-->
<pickups>
	<!-- Health/Drugs -->
	<pickup name="50 Health">
		<imageTileNumber>6</imageTileNumber>
		<playerHealth>50</playerHealth>
	</pickup>
	
	<!-- Weapon/ammo-->
	<pickup name="Knife">
		<imageTileNumber>0</imageTileNumber>
		<weapon>Knife</weapon>
	</pickup>
	<pickup name="Revolver">
		<imageTileNumber>1</imageTileNumber>
		<weapon>Revolver</weapon>
	</pickup>
	<pickup name="Grenade">
		<imageTileNumber>4</imageTileNumber>
		<weapon>Grenade</weapon>
	</pickup>
	<pickup name="M16">
		<imageTileNumber>9</imageTileNumber>
		<weapon>M16</weapon>
	</pickup>
	<!-- Armor -->
	<pickup name="Ballistics Vest">
		<imageTileNumber>20</imageTileNumber>
		<modifier>Ballistics Vest</modifier>
	</pickup>
	
	<pickup name="30Flashlight">
		<imageTileNumber>2</imageTileNumber>
		<modifier>30Flashlight</modifier>
	</pickup>
</pickups>